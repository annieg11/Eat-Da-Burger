<div class="container">  
  <div class="jumbotron center-align"> 
    <img src="/assets/img/burger.png"> 
    <h1 id ='heading'> Eat-Da-Burger! </h1>
  </div>

  {{!-- burger list before being eaten --}}
  <div class="row">
    <div class="col-md-6">
        <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            <div class="form-group">
              <p class="lead"> {{this.burger_name}} </p>
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn btn-default btn-lg" type="submit" id ="dev-Btn"> DEVOUR IT! </button>
                </form>
            </div>
          </li>
          {{/unless}}
        {{/each}}
        </ul>
    </div>
    {{!-- burger list after being eaten --}}
    <div class="col-md-6">
        <ul>
        {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <p class="lead">{{this.burger_name}} </p>
          </li>
          {{/if}}
        {{/each}}
        </ul>
    </div>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <p class="lead"> Enter the name of the burger you want to eat & click the submit button. </p>

    {{!-- section to add burgers --}}
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="bname" rows="3"> </textarea>
      </div>

      <button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
    </form>
  </div>
</div>